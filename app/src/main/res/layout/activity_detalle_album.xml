<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:titleTextColor="@color/white" />

    <!-- ScrollView para contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card de informaci칩n principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/card_color_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <!-- Icono del 치lbum -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_album"
                        app:tint="@color/white" />

                    <!-- Informaci칩n b치sica -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/textTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T칤tulo del 츼lbum"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textArtista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Artista"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/textA침o"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A침o"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/textGenero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="G칠nero"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/textTotalCanciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Canciones: 0"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 游댠 SECCI칍N DE CANCIONES DEL 츼LBUM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Canciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView para canciones -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCancionesAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Mensaje cuando no hay canciones -->
            <TextView
                android:id="@+id/textNoCanciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay canciones en este 치lbum"
                android:textSize="16sp"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
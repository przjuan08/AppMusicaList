<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

<!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="@string/ver_artistas"
        android:layout_marginTop="1dp"
        app:titleTextColor="@color/white" />

    <!-- Contenedor de búsqueda y filtro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_background">

        <!-- SearchView con estilo mejorado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white">

            <SearchView
                android:id="@+id/searchViewArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="@string/buscar_artista"
                android:background="@android:color/transparent"
                android:iconifiedByDefault="false" />

        </androidx.cardview.widget.CardView>

        <!-- Filtro por género con estilo mejorado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter"
                    app:tint="@color/primary_color"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filtro_genero"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginEnd="12dp" />

                <!-- Spinner con estilo personalizado -->
                <Spinner
                    android:id="@+id/spinnerGeneroArtista"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- RecyclerView para mostrar artistas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerArtistas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>